<Page x:Class="MinecraftServer.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftServer"
        mc:Ignorable="d"
        >
    <Grid>
        <TabControl BorderThickness="0,1,0,0" Background="Transparent" x:Name="ServerTabs" SelectionChanged="ServerTabs_OnSelectionChanged">
            <TabItem IsSelected="True" Header="Java">
                <Frame Margin="-2" x:Name="JavaFrame"/>
            </TabItem>
            <TabItem Header="Bedrock">
                <Frame Margin="-2" x:Name="BedrockFrame"/>
            </TabItem>
            <TabItem Header="Settings">
                <Frame Margin="-2" x:Name="SettingsFrame"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>

<Page x:Class="MinecraftServer.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftServer"
        mc:Ignorable="d"
        Title="Settings"
        >
    <Grid Margin="5">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Amount of lines to show" Margin="0,0,5,0"/>
            <TextBox MinWidth="40" x:Name="AmountOfLinesToShowTB" TextChanged="AmountOfLinesToShowTB_OnTextChanged" TextAlignment="Center" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock Grid.Column="2" x:Name="TBError"/>
        </Grid>
    </Grid>
</Page>
